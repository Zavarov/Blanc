<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>vartas.discord</groupId>
    <artifactId>bot</artifactId>
    <version>2.0.1</version>
    <modules>
        <module>io</module>
        <module>api</module>
        <module>command</module>
        <module>use</module>
        <module>blanc</module>
    </modules>

    <packaging>pom</packaging>

    <properties>
        <!-- .. Libraries ..................................................... -->

        <monticore.version>5.0.5</monticore.version>
        <jda.version>3.8.3_464</jda.version>
        <reddit.api.version>2.0.9</reddit.api.version>

        <commons.collections.version>4.4</commons.collections.version>
        <assertj.version>3.12.2</assertj.version>
        <junit.version>4.12</junit.version>
        <httpclient.version>4.5.9</httpclient.version>
        <commons-text.version>1.7</commons-text.version>
        <json.version>20180813</json.version>
        <guava.version>18.0</guava.version>
        <jfreechart.version>1.5.0</jfreechart.version>
        <evo.inflector.version>1.2.2</evo.inflector.version>
        <icu4j.version>64.2</icu4j.version>

        <!-- .. Command generator arguments ................................... -->

        <command.modelPath>${project.basedir}/models</command.modelPath>
        <command.templatePath>${project.build.directory}/template-resources</command.templatePath>
        <command.targetPath>${project.basedir}/src/main/java</command.targetPath>
        <command.outputPath>${project.build.directory}/generated-sources/monticore/sourcecode</command.outputPath>
        <command.packagePath>vartas.discord.blanc.command</command.packagePath>

        <!-- .. Misc .......................................................... -->

        <java.version>1.8</java.version>
        <wagon.provider.version>2.6</wagon.provider.version>

        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>

        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>

        <!-- Classifiers -->

        <grammars.classifier>grammars</grammars.classifier>
    </properties>

    <!-- == Repositories ==================================================== -->

    <repositories>
        <repository>
            <id>se-nexus</id>
            <url>https://nexus.se.rwth-aachen.de/content/groups/public/</url>
        </repository>

        <repository>
            <id>jcenter</id>
            <name>jcenter-bintray</name>
            <url>http://jcenter.bintray.com</url>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>se-nexus</id>
            <url>https://nexus.se.rwth-aachen.de/content/groups/public/</url>
        </pluginRepository>
    </pluginRepositories>
</project>
